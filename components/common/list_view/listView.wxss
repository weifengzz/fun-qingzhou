/* components/common/list_view/listView.wxss */

.listView_box {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.listView_box_content {
  width: 100%;
  height: 100%;
}

.listView_box_header, .listView_box_footer {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #999;
  background: #fff;
}

.listView_box_header {
  margin-top: -80rpx;
}

.refreshingView {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.dropDownImg, .dropEndImg {
  width: 32rpx;
  height: 32rpx;
  margin-right: 24rpx;
}

.refreshingView_img, .loadMoreRefresh_img {
  width: 32rpx;
  height: 32rpx;
  margin-right: 24rpx;
  transition: 0.5s;
  transform-origin: 50% 50%;
  animation: loading 1s linear infinite;
}

@keyframes loading {
  from {
    -webkit-transform: rotate(0deg);
  }

  to {
    -webkit-transform: rotate(360deg);
  }
}

.listView_box_footer {
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 10;
}

.textColor_red {
  color: rgba(255, 0, 0, 0.6);
}

/*空列表*/

.emptyView {
  width: 100vw;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
}

.noMoreView {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}
