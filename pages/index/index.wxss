/**index.wxss**/
page {
  height: 100%;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.company-motto {
  margin-top: 20rpx;
  font-size: 24rpx;
}

.logo {
  margin-bottom: 200rpx;
  height: 180rpx;
  width: 180rpx;
}

.button {
  color: white;
  font-size: 32rpx;
  padding-left: 80rpx;
  padding-right: 80rpx;
}
